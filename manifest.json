{
  "manifest_version": 3,
  "name": "Audio Capture for n8n",
  "version": "1.1",
  "description": "Capture audio from any browser tab and send to n8n webhook",
  "permissions": [
    "tabCapture",
    "activeTab",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}