{
  "manifest_version": 3,
  "name": "Audio Capture for n8n",
  "version": "2.0",
  "description": "Capture audio from any browser tab and send to n8n webhook",
  "permissions": [
    "tabCapture",
    "activeTab",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "audio-processor.js",
        "audio-capture-handler.js",
        "recording-page.html",
        "recording-page.js",
        "recording-debug.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}